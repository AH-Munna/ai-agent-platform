// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id        String   @id @default(cuid())
    username  String   @unique
    password  String // Hashed
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Settings
    globalSettings Json? // Stores { mainPrompt: string, model: string, apiKey: string, baseUrl: string }

    personas   UserPersona[]
    characters Character[] // Characters created by this user
    sessions   ChatSession[]
}

model UserPersona {
    id        String   @id @default(cuid())
    userId    String
    name      String
    avatar    String?
    bio       String   @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
    messages     Message[]
    chatSessions ChatSession[]
}

model Character {
    id        String   @id @default(cuid())
    userId    String? // Optional: System characters vs User characters
    name      String
    avatar    String?
    bio       String   @db.Text
    greeting  String?  @db.Text // First message sent by character
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user     User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
    messages Message[]
    sessions ChatSession[] // Sessions this character is in (Many-to-Many via implicit or explicit?)
    // Simpler: A session usually has ONE primary character in SillyTavern style, 
    // but we might want multi-character. Let's keep it Many-to-Many.
}

model ChatSession {
    id       String  @id @default(cuid())
    userId   String
    name     String // E.g. "Chat with Alice"
    scenario String? @db.Text // Specific scenario for this chat

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
    participants Character[] // Implicit many-to-many
    messages     Message[]

    // The persona the user is using in this session
    userPersonaId String?
    userPersona   UserPersona? @relation(fields: [userPersonaId], references: [id])
}

model Message {
    id      String @id @default(cuid())
    content String @db.Text
    role    String // "user" or "assistant"

    // Sender logic
    userPersonaId String?
    characterId   String?

    sessionId String
    createdAt DateTime @default(now())

    userPersona UserPersona? @relation(fields: [userPersonaId], references: [id], onDelete: Cascade)
    character   Character?   @relation(fields: [characterId], references: [id], onDelete: Cascade)
    session     ChatSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
